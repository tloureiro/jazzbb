{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./node_modules"
    ],
    "noEmit": true,
    "target": "ES2021",
    "downlevelIteration": true
  },
  "include": [
    "src"
  ]
}
